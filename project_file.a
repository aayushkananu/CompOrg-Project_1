.data

input: .space 11 # for the user input
enter: .asciiz "\n"
# N = 26 + (X % 11), N(base) = 28
# M = N - 10, M = 18
.text

main:
li $v0, 8
la $a0, input
li $a1, 11
syscall

enterInput:
move $t3, $a0
lb $s2, ($t3)

# check values
verify:
beq $t0, 10, output

sort_values:
addi $t0, $t0, 1
bge $s2, 97, lowercaseR 
bge $s2, 65, uppercaseR 
bge $s2, 48, numbers 

# creating a function
counter:
addi $t3, $t3, 1
lb $s2,($t3)
j verify

# uppercase character R
uppercaseR:
bge $s2, 82, counter
sub $s2, $s2, 54
add $s3, $s3, $s2
j counter

# for the lowercase character r
lowercaseR:
bge $s2, 114, counter # for the letter r
sub $s2, $s2, 86
add $s3, $s3, $s2
j counter

numbers:
bge $s2, 48, counter
sub $s2, $s2, 48
add $s3, $s3, $s2
j counter
